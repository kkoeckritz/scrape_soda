<div class="container">
    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Fresh Articles</h1>
        </div>

    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">
                            <h4>{{this.title}}</h4>
                        </div>
                        <div class="card-text">
                            <p> {{this.summary}}</p>
                            <a href={{this.link}} target="_blank">{{this.url}}</a>
                            <br><br>
                            <button type="button" class="btn btn-success save" data-id={{this._id}}>Save to Library</button>
                        </div>
                    </div>                    
                </div>
            {{/each}}
        {{else}}
            <div class="panel panel-default">
                <div class="panel-body">
                <h4>No articles found. Please refresh.</h4>
                </div>
            </div>
        {{/if}}
    </div>
</div>